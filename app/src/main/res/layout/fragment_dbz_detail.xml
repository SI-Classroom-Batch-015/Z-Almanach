<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DbzDetailFragment"
    android:background="@drawable/hintergrund">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/carbon_black"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tv_choiseCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="@string/erkunde_die_dbz_welt"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_detail_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/stell_deine_favoriten_zusammen"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/cv"
        app:layout_constraintTop_toBottomOf="@+id/cv" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_dbzDetail"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/iv_detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/carbon_black"
            android:contentDescription="@string/die_detailansicht_des_ausgew_hlten_charakters"
            android:padding="8dp"
            android:visibility="gone" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_detail_hardcode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/name_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_ki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="@string/ki_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_isDestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="@string/is_destroyed_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_maxKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:text="@string/max_ki_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="16dp"
        android:text="@string/race_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_ki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/ki"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_isDestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/is_destroyed"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_maxKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="@string/max_ki"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:text="@string/race"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider1"
        android:layout_width="4dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider2"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="56dp"
        android:background="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider3"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="96dp"
        android:background="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider4"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="136dp"
        android:background="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider5"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="176dp"
        android:background="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="184dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_dbzDetail">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/carbon_black"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:text="@string/description"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_selectedFavorite"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/standart_favorit_element"
        android:src="@drawable/baseline_favorite_default"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/cv_dbzDetail"
        app:layout_constraintTop_toTopOf="@+id/cv_dbzDetail" />

    <ImageView
        android:id="@+id/iv_vs_detailToPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/held_w_hlen"
        android:scaleType="centerCrop"
        android:src="@drawable/vs"
        app:layout_constraintEnd_toEndOf="@+id/iv_selectedFavorite"
        app:layout_constraintStart_toStartOf="@+id/iv_selectedFavorite"
        app:layout_constraintTop_toBottomOf="@+id/iv_selectedFavorite" />
</androidx.constraintlayout.widget.ConstraintLayout>