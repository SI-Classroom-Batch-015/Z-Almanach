<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DbzDetailFragment"
    android:background="@drawable/hintergrund">

    <TextView
        android:id="@+id/tv_intro_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="@string/hier_siehst_du_s_mtliche_informationen_nstory_modus_w_hle_deinen_favoriten_zum_spielen_aus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_dbzDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/iv_detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/die_detailansicht_des_ausgew_hlten_charakters"
            android:background="@color/carbon_black"
            android:padding="8dp"
            android:visibility="gone"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_detail_hardcode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/name_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_ki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="@string/ki_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_isDestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="@string/is_destroyed_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_maxKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:text="@string/max_ki_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_hardcode_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="16dp"
        android:text="@string/race_hardcode"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_ki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/ki"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_isDestroyed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/is_destroyed"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_maxKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="@string/max_ki"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:text="@string/race"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider1"
        android:layout_width="4dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider2"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="56dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail"
        android:outlineAmbientShadowColor="@color/black"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="96dp"
        android:background="?android:attr/listDivider"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider4"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="136dp"
        android:background="?android:attr/listDivider"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <View
        android:id="@+id/divider5"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="176dp"
        android:background="?android:attr/listDivider"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_dbzDetail" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="184dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_dbzDetail">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/carbon_black"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:text="@string/description"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_favorite_default"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/baseline_favorite_default"
        app:layout_constraintBottom_toBottomOf="@+id/cv_dbzDetail"
        app:layout_constraintStart_toEndOf="@+id/cv_dbzDetail"
        android:contentDescription="@string/standart_favorit_element"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_favorite_selected"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/baseline_favorite_selected"
        app:layout_constraintBottom_toBottomOf="@+id/cv_dbzDetail"
        app:layout_constraintStart_toEndOf="@+id/cv_dbzDetail"
        android:contentDescription="@string/standart_favorit_element"
        android:visibility="invisible"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>